<UserControl x:Class="TALLEREF9.UCRead"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TALLEREF9"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="clienteViewSource"/>
        <CollectionViewSource x:Key="cuentasClienteViewSource" Source="{Binding Cuentas,
Source={StaticResource clienteViewSource}}"/>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="clienteDataGrid" Grid.Row="0" ItemsSource="{Binding Source={StaticResource
clienteViewSource}}" Margin="10,10,10,10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="SizeToHeader"/>
                <DataGridTextColumn Binding="{Binding Nombre}" Header="Nombre" Width="100"/>
                <DataGridTextColumn Binding="{Binding Identificacion}" Header="Identificación" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name= "cuentasDataGrid" Grid.Row="1" ItemsSource="{Binding Source={StaticResource
cuentasClienteViewSource}}" Margin="10,10,10,10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="SizeToHeader"/>
                <DataGridTextColumn Binding="{Binding Nombre}" Header="Nombre" Width="100"/>
                <DataGridTextColumn Binding="{Binding Saldo}" Header="Saldo" Width="100"/>
                <DataGridTextColumn Binding="{Binding Cliente.Id}" Header="Cliente" Width="100"/>
                <DataGridTextColumn Binding="{Binding Descripcion}" Header="Descripción" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
