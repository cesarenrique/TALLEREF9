<UserControl x:Class="TALLEREF9.UCLookForCuenta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:TALLEREF9"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="cuentasClienteViewSource3"/>
        <CollectionViewSource x:Key="clienteViewSource3" Source="{Binding Cliente,
Source={StaticResource cuentasClienteViewSource3}}"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="ID:"></Label>
            <xctk:IntegerUpDown x:Name="TBmin" Width="100" Minimum="0" Maximum="1000000" Value="10" />
            <xctk:IntegerUpDown x:Name="TBmax" Width="100" Minimum="0" Maximum="1000000" Value="100" />
            <Button Content="Buscar" Width="200" Click="Button_Click"></Button>
        </StackPanel>
        <DataGrid x:Name= "cuentasDataGrid" Grid.Row="1" ItemsSource="{Binding Source={StaticResource
cuentasClienteViewSource3}}" Margin="10,10,10,10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="SizeToHeader"/>
                <DataGridTextColumn Binding="{Binding Nombre}" Header="Nombre" Width="100"/>
                <DataGridTextColumn Binding="{Binding Saldo}" Header="Saldo" Width="100"/>
                <DataGridTextColumn Binding="{Binding Cliente.Id}" Header="Cliente" Width="100"/>
                <DataGridTextColumn Binding="{Binding Descripcion}" Header="Descripción" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="clienteDataGrid" Grid.Row="2" ItemsSource="{Binding Source={StaticResource
clienteViewSource3}}" Margin="10,10,10,10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="SizeToHeader"/>
                <DataGridTextColumn Binding="{Binding Nombre}" Header="Nombre" Width="100"/>
                <DataGridTextColumn Binding="{Binding Identificacion}" Header="Identificación" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
