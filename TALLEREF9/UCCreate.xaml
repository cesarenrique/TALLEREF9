<UserControl x:Class="TALLEREF9.UCCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TALLEREF9"
             mc:Ignorable="d" 
             d:DesignHeight="950" d:DesignWidth="800"
             Loaded="UserControl_Loaded" >
    
        <UserControl.Resources>
            <CollectionViewSource x:Key="clienteViewSource"/>
        </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <StackPanel Margin="10,0" Width="200" HorizontalAlignment="Left">
            <Label Content="Cliente:"></Label>
            <Label Content="Nombre:"></Label>
            <TextBox Name="ClienteNombreTextBox"></TextBox>
            <Label Content="Identificación:"></Label>
            <TextBox Name="ClienteIdentificacionTextBox"></TextBox>
            <Button HorizontalAlignment="Right" Width="100" Click="GuardarCliente_Click" Margin="0,10,0,0"  Content="Guardar"></Button>
        </StackPanel>
        <Separator Margin="40,10,40,10"></Separator>
        <StackPanel Margin="40,0" Width="200" HorizontalAlignment="Left">
            <Label Content="Cuenta cliente"></Label>
            <Label Content="Nombre:"></Label>
            <TextBox Name="CuentaClienteNombreTextBox"></TextBox>
            <Label Content="Descripción:"></Label>
            <TextBox Name="CuentaClienteDescripcionTextBox"></TextBox>
            <Label Content="Saldo:"></Label>
            <TextBox Name="CuentaClienteSaldoTextBox"></TextBox>
            <Label Content="Cliente:"></Label>
            <ComboBox Name="CuentaClienteComboBox" ItemsSource="{Binding Source={StaticResource clienteViewSource}}" DisplayMemberPath="Id"></ComboBox>
            <Button HorizontalAlignment="Right" Width="100" Click="GuardarCuentaCliente_Click" Margin="0,10,0,0"  Content="Guardar"></Button>
        </StackPanel>
    </StackPanel>   
</UserControl>
